# TCM系统环境变量配置模板
# 复制此文件为.env并填入您的实际配置

# 阿里云通义千问API密钥 (必需)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 数据库配置 (PostgreSQL)
DATABASE_URL=postgresql://tcm_user:your_password@localhost:5432/tcm_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tcm_db
DB_USER=tcm_user
DB_PASSWORD=your_database_password
DB_SSL_MODE=prefer

# 百度OCR API配置 (可选 - 用于处方图片识别)
BAIDU_OCR_API_KEY=your_baidu_ocr_api_key
BAIDU_OCR_SECRET_KEY=your_baidu_ocr_secret_key

# 服务配置
HOST=0.0.0.0
PORT=8000
WORKERS=1
DEBUG=false

# 知识库路径
KNOWLEDGE_DB_PATH=/opt/tcm/knowledge_db

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/tcm_api.log

# 域名配置（用于CORS）
ALLOWED_ORIGINS=https://your_domain.com,https://www.your_domain.com

# 安全配置
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,your_domain.com

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 微信配置 (可选)
WECHAT_VERIFY_TOKEN=your_wechat_token

# 短信验证码配置 (可选)
SMS_API_KEY=your_sms_api_key
SMS_SECRET_KEY=your_sms_secret_key